<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{asset "built/index.css"}}" />
    <script src="{{asset "built/index.js"}}" defer></script>

    {{!-- style bits yay --}}
    <style>
        :root {
          {{#if @custom.light_primary_color}}
          --light-primary: {{@custom.light_primary_color}};
          {{/if}}
          {{#if @custom.dark_primary_color}}
          --dark-primary: {{@custom.dark_primary_color}};
          {{/if}}
          {{#if @custom.light_secondary_color}}
          --light-secondary: {{@custom.light_secondary_color}};
          {{/if}}
          {{#if @custom.dark_secondary_color}}
          --dark-secondary: {{@custom.dark_secondary_color}};
          {{/if}}
          {{#if @custom.light_splash_color}}
          --light-splash: {{@custom.light_splash_color}};
          {{/if}}
          {{#if @custom.dark_splash_color}}
          --dark-splash: {{@custom.dark_splash_color}};
          {{/if}}
        }

        body {
          --acc: {{@site.accent_color}};
        }

        :root {
          --fg1: var(--dark-primary);
          --bg1: var(--light-primary);
          --fg2: var(--dark-secondary);
          --bg2: var(--light-secondary);
          --fga: var(--dark-splash);
          --bga: var(--light-splash);
        }
        body.dark {
          --fg1: var(--light-primary);
          --bg1: var(--dark-primary);
          --fg2: var(--light-secondary);
          --bg2: var(--dark-secondary);
          --fga: var(--light-splash);
          --bga: var(--dark-splash);
        }
    </style>

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in <head> --}}

</head>
<body class="{{body_class}} {{#if @custom.use_dark_by_default}}dark{{/if}}">
<div class="gh-viewport">

<header id="gh-head" class="gh-head">
    <nav class="gh-head-inner gh-container">

        <div class="gh-head-brand">
            <a class="gh-head-logo" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}" />
                {{else}}
                    {{@site.title}}
                {{/if}}
            </a>
            <a class="gh-burger" role="button" aria-label="menu">
                <div class="gh-burger-box">
                    <div class="gh-burger-inner"></div>
                </div>
            </a>
        </div>
        <div class="gh-head-menu">
            {{navigation}}
        </div>
        <div class="gh-head-actions">
            <div class="gh-head-actions-list">
                {{search}}
                {{#if @site.members_enabled}}
                    {{^if @member}}
                    <a class="gh-button" href="{{@site.signup_url}}">Subscribe</a>
                    {{else}}
                    <a class="gh-button" href="#/portal/account">Account</a>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </nav>
</header>

<main class="gh-main">

    {{{body}}}
    {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}

</main>

<footer class="gh-foot">
    <div class="gh-container">
        <div class="gh-foot-menu">
            {{navigation type="secondary"}}
        </div>
        <div class="gh-foot-meta">
            Published with <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a>
        </div>
    </div>
</footer>

</div>

{{!-- <foot> --}}
{{ghost_foot}}
{{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>
</html>
